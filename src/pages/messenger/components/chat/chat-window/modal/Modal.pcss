.modal {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f9f9f9;
}

.title {
  font-weight: 500;
  font-size: 20px;
  line-height: 100%;
  color: #1e1e1e;
  margin-bottom: 20px;
}

.modal__content {
  width: 340px;
  padding: 40px;
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 0 6px rgba(0, 0, 0, 0.14);
  display: flex;
  flex-direction: column;
  align-items: center;
}
